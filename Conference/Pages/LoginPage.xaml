<Page x:Class="Conference.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Conference.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="Организация конференций - Авторизация"
      Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Label Content="ID номер:"></Label>
            <TextBox x:Name="IdNumberTextBox"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Center"></TextBox>
            <Label Content="Пароль:"></Label>
            <PasswordBox x:Name="PasswordBox"
                         VerticalContentAlignment="Center"
                         HorizontalContentAlignment="Center"></PasswordBox>
            <Button x:Name="LoginButton" Content="Войти"
                    Click="LoginButton_Click"
                    Margin="10"></Button>
        </StackPanel>
    </Grid>
</Page>
